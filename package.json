{
  "name": "smart-contracts",
  "version": "0.0.1",
  "scripts": {
    "help": "anchor --help",
    "build:all": "anchor build",
    "build:bridge": "anchor build -p eywa_bridge",
    "exp:bridge": "cargo +bpf expand --target bpfel-unknown-unknown --manifest-path ./programs/eywa-bridge/Cargo.toml > bridge.exp.rs",
    "exp:stub": "cargo +bpf expand --target bpfel-unknown-unknown --manifest-path ./programs/test-stub/Cargo.toml > stub.exp.rs",
    "exp:ps": "cargo +bpf expand --target bpfel-unknown-unknown --manifest-path ./programs/eywa-portal-synthesis/Cargo.toml > portal-synthesis.exp.rs",
    "exp:tank": "cargo +bpf expand --target bpfel-unknown-unknown --manifest-path ./programs/eywa-gas-tank/Cargo.toml > gas-tank.exp.rs",
    "test:rs:bridge": "cargo test-bpf --manifest-path programs/eywa-bridge/Cargo.toml",
    "test:rs:stub": "cargo test-bpf --manifest-path programs/test-stub/Cargo.toml",
    "test:rs:ps": "cargo test-bpf --manifest-path programs/eywa-portal-synthesis/Cargo.toml",
    "test:rs:tank": "cargo test-bpf --manifest-path programs/eywa-gas-tank/Cargo.toml",
    "test:rs": "cargo test-bpf",
    "test:internal": "npm run test:internal2",
    "test:internal1": "ts-mocha -p ./tsconfig.json -t 1000000 tests/*.ts",
    "test:internal2": "ts-mocha -p ./tsconfig.json -t 1000000 tests/eywa-portal-solana.ts",
    "test:internal3": "ts-mocha -p ./tsconfig.json -t 1000000 tests/eywa-bridge-solana.ts",
    "test:internal4": "ts-mocha -p ./tsconfig.json -t 1000000 tests/bridge.test.ts",
    "test": "RUST_BACKTRACE=full anchor test"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.3.7",
    "@project-serum/anchor": "=0.16.1",
    "@project-serum/serum": "~0.13.59",
    "@solana/spl-token": "~0.1.8",
    "@solana/web3.js": "^1.27.0",
    "google-protobuf": "^3.18.1"
  },
  "devDependencies": {
    "@grpc/proto-loader": "^0.6.5",
    "@types/chai": "~4.2.21",
    "@types/mocha": "~8.2.0",
    "chai": "~4.2.0",
    "mocha": "~8.2.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.4.3"
  }
}
